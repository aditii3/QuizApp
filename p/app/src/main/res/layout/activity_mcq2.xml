<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_light"
    tools:context="com.example.android.quiz.activities.Mcq2Activity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewTimer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/timer_height"
            android:layout_margin="@dimen/dp10"
            android:background="@color/color_orange"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="@string/timer"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp60"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewQues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:text="@string/question"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp25"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textViewTimer"
            app:layout_constraintTop_toBottomOf="@+id/textViewTimer"
            app:layout_constraintVertical_bias="0.076" />

        <CheckBox
            android:id="@+id/cb_option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:textSize="@dimen/sp20"
            android:layout_marginTop="@dimen/dp40"
            app:layout_constraintEnd_toEndOf="@+id/textViewTimer"
            app:layout_constraintTop_toBottomOf="@+id/textViewQues" />

        <CheckBox
            android:id="@+id/cb_option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:textSize="@dimen/sp20"
            android:layout_marginTop="@dimen/dp10"
            app:layout_constraintEnd_toEndOf="@+id/textViewQues"
            app:layout_constraintTop_toBottomOf="@+id/cb_option1" />

        <CheckBox
            android:id="@+id/cb_option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:textSize="@dimen/sp20"
            app:layout_constraintEnd_toEndOf="@+id/textViewQues"
            app:layout_constraintStart_toStartOf="@+id/textViewQues"
            app:layout_constraintTop_toBottomOf="@+id/cb_option2" />

        <CheckBox
            android:id="@+id/cb_option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:textSize="@dimen/sp20"
            android:layout_marginTop="@dimen/dp10"
            app:layout_constraintEnd_toEndOf="@+id/textViewQues"
            app:layout_constraintStart_toStartOf="@+id/textViewQues"
            app:layout_constraintTop_toBottomOf="@+id/cb_option3" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginStart="@dimen/dp10"
            android:text="Submit"
            android:textSize="@dimen/sp20"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_option4" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
